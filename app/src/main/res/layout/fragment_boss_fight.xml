<!-- res/layout/fragment_boss_fight.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/BossImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="Päävihollisen kuva"
        android:src="@drawable/mainboss" />

    <TextView
        android:id="@+id/BossText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:text="Boss: 100/100"
        android:textColor="#D32F2F"
        android:textSize="22sp" />

    <Button
        android:id="@+id/AttackBossButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hyökkää"
        android:backgroundTint="#B71C1C"
        android:textColor="#FFFFFF"/>
</LinearLayout>
